<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.carrotgarden.base</groupId>
		<artifactId>carrot-archon</artifactId>
		<version>1.2.0</version>
	</parent>

	<artifactId>carrot-project-image-openvpn</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>

		<publishSource>${basedir}/target/publish</publishSource>
		<publishTarget>/tmp/publish_${carrotTimeFile}</publishTarget>

		<publishInstall>${publishTarget}/install.sh</publishInstall>

	</properties>

	<profiles>

		<profile>

			<id>image-build</id>

			<build>

				<plugins>

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-resources-plugin</artifactId>
						<executions>
							<execution>
								<id>publish-prepare</id>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<phase>package</phase>
								<configuration>
									<resources>
										<resource>
											<directory>src/main/script</directory>
											<filtering>true</filtering>
										</resource>
										<resource>
											<directory>src/main/template</directory>
											<filtering>true</filtering>
										</resource>
									</resources>
									<outputDirectory>${publishSource}</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<plugin>

						<groupId>com.carrotgarden.maven</groupId>
						<artifactId>carrot-maven-aws-plugin</artifactId>
						<version>1.1.2</version>

						<configuration>

							<!-- used by cloud formation & elastic compute goals -->
							<amazonRegion>eu-west-1</amazonRegion>

							<!-- used by cloud formation goals -->
							<stackServerId>com.carrotgarden.aws.stack</stackServerId>
							<stackName>image-build-openvpn</stackName>
							<stackTemplateFile>${publishSource}/formation.template</stackTemplateFile>
							<stackPropertiesInputFile>${publishSource}/formation.properties</stackPropertiesInputFile>

							<!-- used by ssh publish and execute goals -->
							<sshHost>openvpn.carrotgarden.com</sshHost>
							<sshKeyFile>${user.home}/.ssh/id_rsa</sshKeyFile>

							<!-- used by elastic compute goals -->
							<computeServerId>com.carrotgarden.aws.compute</computeServerId>
							<imageName>openvpn</imageName>
							<imageDescription>open vpn server</imageDescription>

						</configuration>

						<executions>

							<execution>
								<id>stack-create</id>
								<phase>package</phase>
								<goals>
									<goal>cloud-formation-create</goal>
								</goals>
							</execution>

							<execution>
								<id>config-publish</id>
								<phase>package</phase>
								<goals>
									<goal>secure-shell-publish</goal>
								</goals>
								<configuration>
									<sshSource>${user.home}/.amazon/carrotgarden/openvpn/server</sshSource>
									<sshTarget>${publishTarget}</sshTarget>
									<sshStatusSuccess>
										<status>-1</status>
									</sshStatusSuccess>
								</configuration>
							</execution>

							<execution>
								<id>script-publish</id>
								<phase>package</phase>
								<goals>
									<goal>secure-shell-publish</goal>
								</goals>
								<configuration>
									<sshSource>${publishSource}</sshSource>
									<sshTarget>${publishTarget}</sshTarget>
									<sshStatusSuccess>
										<status>-1</status>
									</sshStatusSuccess>
								</configuration>
							</execution>

							<execution>
								<id>script-execute</id>
								<phase>package</phase>
								<goals>
									<goal>secure-shell-execute</goal>
								</goals>
								<configuration>
									<sshCommand>sudo bash ${publishInstall}</sshCommand>
									<sshStatusSuccess>
										<status>0</status>
									</sshStatusSuccess>
								</configuration>
							</execution>

							<!-- <execution> -->
							<!-- <id>image-register</id> -->
							<!-- <phase>package</phase> -->
							<!-- <goals> -->
							<!-- <goal>elastic-compute-image-register</goal> -->
							<!-- </goals> -->
							<!-- </execution> -->

							<!-- <execution> -->
							<!-- <id>stack-delete</id> -->
							<!-- <phase>package</phase> -->
							<!-- <goals> -->
							<!-- <goal>cloud-formation-delete</goal> -->
							<!-- </goals> -->
							<!-- </execution> -->

						</executions>

					</plugin>

				</plugins>

			</build>

		</profile>

	</profiles>

</project>
